<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>

<AnchorPane prefHeight="300.0" prefWidth="300.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="calculator.Controller">
    <TextField fx:id="inputField" layoutX="14.0" layoutY="14.0" prefHeight="50.0" prefWidth="272.0"/>
    <GridPane layoutX="14.0" layoutY="74.0" prefHeight="200.0" prefWidth="272.0" vgap="10.0" hgap="10.0">
        <Button text="1" onAction="#processNumber" maxWidth="Infinity" maxHeight="Infinity"/>
        <Button text="2" onAction="#processNumber" GridPane.columnIndex="1" maxWidth="Infinity" maxHeight="Infinity"/>
        <Button text="3" onAction="#processNumber" GridPane.columnIndex="2" maxWidth="Infinity" maxHeight="Infinity"/>
        <Button text="4" onAction="#processNumber" GridPane.rowIndex="1" maxWidth="Infinity" maxHeight="Infinity"/>
        <Button text="5" onAction="#processNumber" GridPane.columnIndex="1" GridPane.rowIndex="1" maxWidth="Infinity" maxHeight="Infinity"/>
        <Button text="6" onAction="#processNumber" GridPane.columnIndex="2" GridPane.rowIndex="1" maxWidth="Infinity" maxHeight="Infinity"/>
        <Button text="7" onAction="#processNumber" GridPane.rowIndex="2" maxWidth="Infinity" maxHeight="Infinity"/>
        <Button text="8" onAction="#processNumber" GridPane.columnIndex="1" GridPane.rowIndex="2" maxWidth="Infinity" maxHeight="Infinity"/>
        <Button text="9" onAction="#processNumber" GridPane.columnIndex="2" GridPane.rowIndex="2" maxWidth="Infinity" maxHeight="Infinity"/>
        <Button text="0" onAction="#processNumber" GridPane.columnIndex="1" GridPane.rowIndex="3" maxWidth="Infinity" maxHeight="Infinity"/>
        <Button text="+" onAction="#processOperator" GridPane.columnIndex="3" maxWidth="Infinity" maxHeight="Infinity"/>
        <Button text="-" onAction="#processOperator" GridPane.columnIndex="3" GridPane.rowIndex="1" maxWidth="Infinity" maxHeight="Infinity"/>
        <Button text="*" onAction="#processOperator" GridPane.columnIndex="3" GridPane.rowIndex="2" maxWidth="Infinity" maxHeight="Infinity"/>
        <Button text="/" onAction="#processOperator" GridPane.columnIndex="3" GridPane.rowIndex="3" maxWidth="Infinity" maxHeight="Infinity"/>
        <Button text="=" onAction="#processOperator" GridPane.columnIndex="2" GridPane.rowIndex="3" maxWidth="Infinity" maxHeight="Infinity"/>
        <Button text="C" onAction="#processClear" GridPane.columnIndex="0" GridPane.rowIndex="3" maxWidth="Infinity" maxHeight="Infinity"/>
    </GridPane>
</AnchorPane>


